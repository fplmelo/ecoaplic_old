tempo<-seq(1:10) 
populacao3<-(0.7^seq(1,10,by=1))*100
data3<-data.frame(tempo,populacao3)

library(ggplot2)
ggplot(data=data3, aes(tempo,populacao3))+
geom_line(group=1)+geom_point()
